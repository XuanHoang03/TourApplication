<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="14dp"
    app:cardElevation="6dp"
    app:cardBackgroundColor="#FFFFFF">

    <LinearLayout
        android:id="@+id/scheduleLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:background="@android:color/transparent">

        <TextView
            android:id="@+id/tvTourName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tên tour"
            android:textStyle="bold"
            android:textColor="#1976D2"
            android:textSize="17sp"
            android:gravity="start"
            android:layout_marginBottom="6dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="4dp">
            <ImageView
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:src="@android:drawable/ic_menu_my_calendar"
                android:tint="#757575"
                android:layout_gravity="center_vertical" />
            <TextView
                android:id="@+id/tvStartTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Bắt đầu: 01/01/2024 08:00"
                android:textSize="14sp"
                android:textColor="#333"
                android:layout_marginStart="6dp"
                android:layout_gravity="center_vertical" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="4dp">
            <ImageView
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:src="@android:drawable/ic_menu_my_calendar"
                android:tint="#757575"
                android:layout_gravity="center_vertical" />
            <TextView
                android:id="@+id/tvEndTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Kết thúc: 01/01/2024 17:00"
                android:textSize="14sp"
                android:textColor="#333"
                android:layout_marginStart="6dp"
                android:layout_gravity="center_vertical" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="4dp">
            <ImageView
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:src="@android:drawable/ic_menu_info_details"
                android:tint="#757575"
                android:layout_gravity="center_vertical" />
            <TextView
                android:id="@+id/tvStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Trạng thái: Đang diễn ra"
                android:textSize="14sp"
                android:textColor="#388E3C"
                android:layout_marginStart="6dp"
                android:layout_gravity="center_vertical" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:src="@android:drawable/ic_menu_agenda"
                android:tint="#757575"
                android:layout_gravity="center_vertical" />
            <TextView
                android:id="@+id/tvTicketCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Số vé: 20"
                android:textSize="14sp"
                android:textColor="#333"
                android:layout_marginStart="6dp"
                android:layout_gravity="center_vertical" />
        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>