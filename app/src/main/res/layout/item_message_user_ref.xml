<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/mainContainer"
    android:minWidth="400dp"
    android:maxWidth="500dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <!-- Avatar bên trái -->
    <ImageView
        android:id="@+id/avatarImageView"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginEnd="8dp"
        android:background="@drawable/circle_background"
        android:clipToOutline="true"
        android:contentDescription="Avatar"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_person" />

    <!-- Bong bóng chứa avatar được nhắc đến và tên người -->
    <LinearLayout
        android:id="@+id/bubbleContainer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        android:background="@drawable/blue_gradient_button"
        android:elevation="2dp"
        android:orientation="horizontal"
        android:padding="12dp"
        android:gravity="center_vertical"
        android:clickable="true"
        android:focusable="true"
        android:foreground="?attr/selectableItemBackground">

        <ImageView
            android:id="@+id/avatarRefImageView"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginEnd="8dp"
            android:background="@drawable/circle_background"
            android:contentDescription="Avatar"
            android:scaleType="centerCrop"
            android:src="@drawable/default_avatar" />

        <TextView
            android:id="@+id/userNameRefTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ĐIỀU HÀNH VIÊN"
            android:textColor="#000000"
            android:textSize="16sp"
            android:textStyle="bold"
            android:gravity="center_vertical" />
    </LinearLayout>
</LinearLayout>
