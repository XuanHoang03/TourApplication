<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp"
        android:background="@android:color/white">

        <!-- Tiêu đề -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Chỉnh sửa người dùng"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#223E91"
            android:gravity="center"
            android:fontFamily="@font/montserrat_regular"
            android:layout_marginBottom="18dp"/>

        <!-- Full Name -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Họ và tên"
            android:textColor="#888888"
            android:textSize="13sp"
            android:fontFamily="@font/montserrat_regular"
            android:layout_marginBottom="2dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="10dp">
            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_person"
                app:tint="#223E91" />
            <EditText
                android:id="@+id/edtFullName"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="10dp"
                android:hint="Họ và tên"
                android:inputType="textPersonName"
                android:textColor="#333333"
                android:textSize="15sp"
                android:fontFamily="@font/montserrat_regular"/>
        </LinearLayout>

        <!-- Username (disabled) -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tên đăng nhập"
            android:textColor="#888888"
            android:textSize="13sp"
            android:fontFamily="@font/montserrat_regular"
            android:layout_marginBottom="2dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="10dp">
            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_person"
                app:tint="#223E91" />
            <EditText
                android:id="@+id/edtUsername"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="10dp"
                android:hint="Tên đăng nhập"
                android:enabled="false"
                android:textColor="#888888"
                android:textSize="15sp"
                android:fontFamily="@font/montserrat_regular"/>
        </LinearLayout>

        <!-- Password -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Mật khẩu"
            android:textColor="#888888"
            android:textSize="13sp"
            android:fontFamily="@font/montserrat_regular"
            android:layout_marginBottom="2dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="10dp">
            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_lock"
                app:tint="#223E91" />
            <EditText
                android:id="@+id/edtPassword"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="10dp"
                android:hint="Mật khẩu"
                android:inputType="textPassword"
                android:textColor="#333333"
                android:textSize="15sp"
                android:fontFamily="@font/montserrat_regular"/>
            <ImageButton
                android:id="@+id/btnTogglePassword"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/ic_eye"
                android:background="@android:color/transparent"
                android:contentDescription="Hiện/Ẩn mật khẩu"/>
        </LinearLayout>

        <!-- Email -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Email"
            android:textColor="#888888"
            android:textSize="13sp"
            android:fontFamily="@font/montserrat_regular"
            android:layout_marginBottom="2dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="10dp">
            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_email"
                app:tint="#223E91" />
            <EditText
                android:id="@+id/edtEmail"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="10dp"
                android:hint="Email"
                android:inputType="textEmailAddress"
                android:textColor="#333333"
                android:textSize="15sp"
                android:fontFamily="@font/montserrat_regular"/>
        </LinearLayout>

        <!-- Phone (disabled) -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Số điện thoại"
            android:textColor="#888888"
            android:textSize="13sp"
            android:fontFamily="@font/montserrat_regular"
            android:layout_marginBottom="2dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="10dp">
            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_phone"
                app:tint="#223E91" />
            <EditText
                android:id="@+id/edtPhone"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="10dp"
                android:hint="Số điện thoại"
                android:inputType="phone"
                android:enabled="false"
                android:textColor="#888888"
                android:textSize="15sp"
                android:fontFamily="@font/montserrat_regular"/>
        </LinearLayout>

        <!-- Address -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Địa chỉ"
            android:textColor="#888888"
            android:textSize="13sp"
            android:fontFamily="@font/montserrat_regular"
            android:layout_marginBottom="2dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="10dp">
            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_location"
                app:tint="#223E91" />
            <EditText
                android:id="@+id/edtAddress"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="10dp"
                android:hint="Địa chỉ"
                android:inputType="textPostalAddress"
                android:textColor="#333333"
                android:textSize="15sp"
                android:fontFamily="@font/montserrat_regular"/>
        </LinearLayout>

        <!-- Role (disabled) -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Vai trò"
            android:textColor="#888888"
            android:textSize="13sp"
            android:fontFamily="@font/montserrat_regular"
            android:layout_marginBottom="2dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="10dp">
            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_profile"
                app:tint="#223E91" />
            <EditText
                android:id="@+id/edtRole"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="10dp"
                android:hint="Vai trò"
                android:enabled="false"
                android:inputType="text"
                android:textColor="#888888"
                android:textSize="15sp"
                android:fontFamily="@font/montserrat_regular"/>
        </LinearLayout>

        <!-- Gender -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Giới tính"
            android:textColor="#888888"
            android:textSize="13sp"
            android:fontFamily="@font/montserrat_regular"
            android:layout_marginBottom="2dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="10dp">
            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_info"
                app:tint="#223E91" />
            <Spinner
                android:id="@+id/spinnerGender"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="10dp"/>
        </LinearLayout>

        <!-- DOB -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ngày sinh"
            android:textColor="#888888"
            android:textSize="13sp"
            android:fontFamily="@font/montserrat_regular"
            android:layout_marginBottom="2dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="10dp">
            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_calendar"
                app:tint="#223E91" />
            <EditText
                android:id="@+id/edtDob"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="10dp"
                android:hint="Ngày sinh"
                android:inputType="date"
                android:textColor="#333333"
                android:textSize="15sp"
                android:fontFamily="@font/montserrat_regular"/>
        </LinearLayout>

        <!-- Status (disabled, badge style) -->
        <TextView
            android:id="@+id/edtStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text=""
            android:textSize="13sp"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:fontFamily="@font/montserrat_regular"
            android:background="@drawable/bg_status_badge"
            android:paddingHorizontal="16dp"
            android:paddingVertical="6dp" />

        <!-- Save Button -->
        <Button
            android:id="@+id/btnSave"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Lưu"
            android:textAllCaps="false"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:fontFamily="@font/montserrat_regular"
            android:background="@drawable/blue_gradient_button"
            android:layout_marginTop="18dp"/>

    </LinearLayout>
</ScrollView> 